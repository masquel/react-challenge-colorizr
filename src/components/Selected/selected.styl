.selected
	padding 15px
	&__color
		display inline-block
		width 5rem
		height 5rem
		text-align center
		border-radius 50%
		background-color rgb(245, 245, 245)
		text-align center
		transition all .4s
		.fa 
			border-radius 50%
			padding 1.5rem
			opacity 0
			font-size 2rem
		&--active
			&:hover
				cursor pointer
				.fa
					opacity 1
		& + & 
			margin-left 2rem