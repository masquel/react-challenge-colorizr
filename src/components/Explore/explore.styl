.explore
	&__title
		text-transform capitalize
	&__group
		margin-bottom 2rem
	&__preset
		text-align center
		padding 2rem
		border .1rem solid #f5f5f5
		border-radius .5rem
		width 18rem
		height 22rem
		margin 1rem
		display inline-block
		&--active
			.fa
				transform scale(1)
				opacity 1
		.fa
			opacity 0
			padding 1.7rem 2rem
			border-radius 50%
			font-size 3rem
			transition all .4s
			transform scale(1.2)
			
		&:hover
			cursor pointer
			.fa
				transform scale(1)
				opacity .8
				display inline-block
			
	&__color
		width 100%
		height 80%
		padding-top 4rem
		text-align center
			