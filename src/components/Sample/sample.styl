.sample
	&__title
		margin-left 2rem
	&__colors
		margin-left -2.5rem
		margin-right -2.5rem
		background-color #f5f5f5
		padding 25px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		&--dark
			background-color #222
	&__color
		display inline-block
		height 5rem
		width 100%
		padding-top 1.5rem
		color #fff
		border-radius .5rem
		text-align center
		margin 1rem
		.fa
			opacity 0
			transition all .2s
		&--selected
			.fa
				opacity 1
		&:hover
			cursor pointer
			.fa
				opacity 1
			
				
	&__footer
		padding 2.5rem 2rem 0 2rem 

.mixer
	&__color
		display inline-block
		vertical-align middle
		margin-left 2rem
		border-radius .2rem
		height 2rem
		width 2rem
		&:hover
			cursor pointer
		&-picker
			position absolute
			top 100%
			display none
			&--active
				display block