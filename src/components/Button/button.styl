.btn
	border 1px solid transparent
	background-color transparent
	color #222
	border-radius .4rem
	padding .5rem 1rem
	&:hover
		cursor pointer
	& + & 
		margin-left 1.5rem
	&--default
		border-color #d5d5d5
		&:hover
			background-color #f5f5f5
	&--danger
		border-color #d42d1b
		background-color #e64c3c
		color #fff
		&:hover
			background-color #d42d1b
	