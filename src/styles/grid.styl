make-grid(size)
	$column = 'column'
	$sep = '-'
	for i in (1..12)
		if(size)
			$class_name = $column + $sep + size + $sep + i
		else
			$class_name = $column + $sep + i
		
		.{$class_name}
			box-sizing border-box
			min-height 1px
			padding-left 10px
			padding-right 10px	
			display inline-block
			font-size 15px
			vertical-align top
			width (100% / 12) * i

make-grid(false)