@import 'normalize';

*
	box-sizing border-box

html
	// simplify rem calculations
	// 1rem == 10px
	font-size 10px
	box-sizing border-box


body
	// reset base font-size to 16px
	font-size 1.6em
	font-family 'PT Sans', sans-serif

.container
	max-width 1200px
	margin-left auto
	margin-right auto
	
.main
	padding-top 90px

.panel
	background-color #fff
	margin-top 3rem
	padding 2.5rem
	box-shadow 0 0 10px rgba(0,0,0,.1)
	position relative
	&__header
		position relative
	&__title
		position relative
		margin-top 0
			

@import 'grid'
@import 'helpers'